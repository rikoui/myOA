function review () {
	$('#reviewContent').dialog({
		resizable : true, //定义对话框是否可编辑大小
		width : 400,
		height : 200,
		left : '360px',
		top : '2000px',
		modal : true,
		inline: true,
		onClose : function() {
			$("#content").val("");
		},
		buttons : [
			{
				text : '确定',
				iconCls : 'icon-ok',
				handler : function() {
					var content = $("#content").val();
					if (content.trim() == "") {
						$.messager.alert("系统提示", "审阅意见不能为空！", "info");
						return;
					}
					DMTRequest({
						url : '../../weeklyController/weeklyReview.do',
						params : {
							weeklyadmin : $("#adminId").val(),
							weeklystart : $("label#review_weeklystart").text(),
							remark : content
						},
						validate : true,
						success : function(data) {
							$("#reviewContent").dialog("close");
							$("#content").val("");
							$.messager.alert("系统提示", "已审阅成功！", "info", function () {
								reBack();
							});
						}
					});
				}
			},
			{
		        text : '取消',
		        iconCls : 'icon-cancel',
		        handler : function() {
			       $("#reviewContent").dialog("close");
			       $("#content").val("");
				}
			}]
	}).dialog('open');;
}

function reBack () {
	location.href = "../weekly/weeklyread.html";
}
//日期加减
function addDate (date, days) {
	var day = new Date(date); 
	day.setDate(day.getDate() + days); 
	var m = day.getMonth() + 1;
	if (m < 10) {
		m = "0" + m;
	}
	var d = day.getDate();
	if (d < 10) {
		d = "0" + d;
	}
	return day.getFullYear() + '-' + m + '-' + d; 
};

//根据当前日期获取星期
function getWeek(dateString){
	var date;
	if(isNull(dateString)){
		date = new Date();
	}else{
		var dateArray = dateString.split("-");
		date = new Date(dateArray[0], parseInt(dateArray[1] - 1), dateArray[2]);
	}
	return "星期" + "日一二三四五六".charAt(date.getDay());
};
// 判断非空
function isNull(object){  
    if(object == null || typeof object == "undefined" || object == ""){  
        return true;  
    }  
    return false;  
};
// 获取当前系统时间
function getTime () {
	// 获取当前时间
	var date = new Date();
	var year = date.getFullYear();
	var month = date.getMonth() + 1;
	if (month < 10) {
		month = "0" + month;
	}
	var day = date.getDate();
	return year + "-" + month + "-" + day;
}
