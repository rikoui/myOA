			var weekly = data.result;
			$("#review_rolename").html(weekly.rolename);
			$("#review_weeklyadmin").html(weekly.weeklyadmin);
			$("#review_weeklystart").html(weekly.timeStart);
			$("#review_weeklyend").html(weekly.timeEnd);
